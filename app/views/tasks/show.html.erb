<h1>詳細ページ</h1>
<table class="table table-bordered">
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  
  <tr>
    <th>タスク内容</th>
    <td><%= @task.content %></td>
  </tr>
</table>

<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, class: 'btn btn-danger' %>