<h1><%= current_user.name %>のタスク一覧</h1>
<% if tasks.any? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>ステータス</th>
        <th>タスク内容</th>
      </tr>
    </thead>
    
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= link_to '詳細', task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
  
<% end %>

<%= link_to '新規作成', new_task_path, class: "btn btn-primary" %>
